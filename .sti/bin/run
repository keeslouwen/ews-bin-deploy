#!/bin/sh

sed -i "/^dbHost=.*/c\dbHost=ocdbtst1" $JWS_HOME/openclinica.config/datainfo.properties
sed -i "/^db=.*/c\db=openclinica" $JWS_HOME/openclinica.config/datainfo.properties
sed -i "/^dbPort=.*/c\dbPort=$OCDBTST1_PORT_5432_TCP_PORT" $JWS_HOME/openclinica.config/datainfo.properties
sed -i "/^userAccountNotification=.*/c\userAccountNotification=admin" /usr/local/tomcat/webapps/OpenClinica/WEB-INF/classes/datainfo.properties
sed -i "/^# about\.text1=.*/c\about.text1= Powered by" $JWS_HOME/openclinica.config/datainfo.properties
sed -i "/^# about\.text2=.*/c\about.text2= mosaic-greifswald.de" $JWS_HOME/openclinica.config/datainfo.properties
sed -i "/^# supportURL=.*/c\supportURL=https://mosaic-greifswald.de/openclinica" $JWS_HOME/openclinica.config/datainfo.properties
sed -i "/^collectStats=.*/c\collectStats=false" $JWS_HOME/openclinica.config/datainfo.properties
sed -i "/^designerURL=.*/c\designerURL=" $JWS_HOME/openclinica.config/datainfo.properties
cp $JWS_HOME/openclinica.config/datainfo.properties $JWS_HOME/openclinica-ws.config

exec $JWS_HOME/bin/launch.sh
~
